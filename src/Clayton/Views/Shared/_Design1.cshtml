<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Code With Clayto</title>

    @await Html.PartialAsync("_Resources")

    <link href="~/Content/Design1.css" rel="stylesheet" />

</head>
<body>


    <section id="cHeader">
        <div class="container">
            <div id="cBrand">
                <h2>
                    <a asp-controller="Home" asp-action="Index">Code With Clayto</a>
                </h2>
                <p>My corner of the internet where I talk about programming things.</p>
            </div>
            <div id="cNavContainer">
                <nav>
                    @await Html.PartialAsync("_LoginPartial")
                </nav>
            </div>
        </div>
    </section>

    <section id="cBody">
        <div class="container">
            @RenderBody()
        </div>
    </section>

    @* 
        Don't use await renderasync here. It will not render javascript correctly for multi select dropdown
        and potentially cause other issues, too.
    *@

    @{ Html.RenderPartial("_InitializeJavascript"); }

</body>
</html>

