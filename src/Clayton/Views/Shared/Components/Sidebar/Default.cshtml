
@model Clayton.Models.ViewModels.SidebarViewModel

<h3>Categories</h3>

<ul>
    @foreach (var cat in Model.ActiveCategories)
    {
        <li>
            <a href="@Url.RouteUrl("CategoryWithPosts", new { id = cat.CategoryId, categoryTitle = cat.Title })">@cat.Title</a>
        </li>
    }
</ul>

<h3>Recent Posts</h3>

<ul>
    @foreach (var post in Model.RecentPosts)
    {
        <li>
            <a href="@Url.RouteUrl("PostWithSlug", new { id = post.PostId, slug = post.Slug })">@post.Title</a>
        </li>
    }
</ul>