@model Clayton.Models.Enhancement

<form asp-controller="Enhancement" asp-action="Add" method="post" role="form" id="EnhancementAddForm">
    <h4>Add New Enhancement</h4>

    @* There is a bug with ASP.Net Core 1.0.0 *@
    @*https://github.com/aspnet/Mvc/issues/4989*@
    @*<div asp-validation-summary="All" class="text-danger"></div>*@

    @if (!@ViewData.ModelState.IsValid)
    {
        var errors = ViewData.ModelState.Values.Select(item => item.Errors.FirstOrDefault()?.ErrorMessage).Where(item => item != null);
        <div class="alert alert-danger">
            <span>There are problems with your input:</span>
            <ul>
                @foreach (var error in errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }


    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <div>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <div>
            <textarea asp-for="Content" class="form-control tinyeditor" rows="10"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div>
            <input type="submit" class="btn btn-primary" value="Save New Enhancement" />
        </div>
    </div>

</form>